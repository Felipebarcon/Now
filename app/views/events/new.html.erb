<div class="main-start-div">
  <div class="main-start-div-content summary-container">
    <h2 class="summary-header">Event</h2>
    <div>
      <%= simple_form_for @event do |f| %>
      <%= f.input :location,
                  label_html: { class: "white-label" },
                  input_html: { id: 'event-location'} %>
      <%= f.input :description,
                  label_html: { class: "white-label" } %>
      <%= f.input :start_date_time,
                  as: :datetime,
                  html5: true,
                  min: DateTime.now,
                  label_html: { class: "white-label" } %>
      <%= f.input :end_date_time,
                  as: :datetime,
                  html5: true,
                  min: DateTime.now,
                  label_html: { class: "white-label" } %>
    </div>
    <div>
      <%= f.submit class: 'now-button button' %>
    </div>
    <% end %>
  </div>
</div>
